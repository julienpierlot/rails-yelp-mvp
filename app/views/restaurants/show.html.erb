<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mt-3"><%= @restaurant.name %></h1>
      <span class="badge badge-danger"><%= @restaurant.category %></span>
      <div class="mt-2 mb-2">
        <span >Address: <%= @restaurant.address %> |Â </span>
        <span>Number: <%= @restaurant.phone_number %></span>
      </div>
      <div>
        <ul class="reviews list-group">
          <h2 class="mt-3">Latest reviews (<%= @restaurant.reviews.count %>)</h2>
          <% @restaurant.reviews.order(created_at: :desc).each do |review| %>
            <li class="list-group-item">
              <div>
                <span class="badge badge-light">Rating: 
                  <%review.rating.times do %>
                    <i class="fas fa-star"></i>
                  <% end %>
                  <% (5 - review.rating).times do %>
                    <i class="far fa-star"></i>
                  <% end %>
                </span>
                <p>Content:<br><%= review.content%></p>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <h2 class="mt-3">Add a review for <%= @restaurant.name %></h2>
      <%= render 'reviews/form' %>
      <%= link_to 'Back to Restaurants', restaurants_path, class: "btn btn-secondary mt-3" %>
    </div>
  </div>
</div>
